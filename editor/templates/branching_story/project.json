{
  "fileVersion": 2,
  "metadata": {
    "name": "Branching Story",
    "version": "1.0.0",
    "author": "",
    "description": "An interactive narrative with player choices leading to multiple endings",
    "genre": "Visual Novel",
    "rating": "Everyone",
    "tags": ["branching", "choices", "multiple-endings", "interactive"]
  },
  "engine": {
    "minVersion": "1.0.0",
    "targetPlatforms": ["windows", "linux", "web"]
  },
  "runtime": {
    "startScene": "prologue",
    "defaultResolution": {
      "width": 1920,
      "height": 1080
    },
    "aspectRatio": "16:9",
    "fullscreenByDefault": false
  },
  "localization": {
    "locales": ["en"],
    "defaultLocale": "en",
    "fallbackLocale": "en"
  },
  "audio": {
    "voiceActingEnabled": false,
    "masterVolume": 1.0,
    "musicVolume": 0.8,
    "voiceVolume": 1.0,
    "sfxVolume": 0.7
  },
  "ui": {
    "theme": "default",
    "font": "OpenSans",
    "dialogueBoxStyle": "classic",
    "choiceStyle": "vertical"
  },
  "build": {
    "outputDirectory": "dist",
    "compression": true,
    "encryptScripts": false
  },
  "variables": {
    "globals": {
      "affinity_a": 0,
      "affinity_b": 0,
      "secret_found": false
    }
  },
  "playbackSourceMode": "Graph"
}
